<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tn_ma_l30000048.binderipc.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/reporter_container"
        >
        <Button
            android:id="@+id/btn_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Bind" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="transact"
            android:id="@+id/btn_transact"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unbind"
            android:id="@+id/btn_unbind"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/aidl_container"
        android:layout_below="@id/reporter_container">
        <Button
            android:id="@+id/btn_aidl_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="aidl Bind" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aidl transact"
            android:id="@+id/btn_aidl_transact"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aidl unbind"
            android:id="@+id/btn_aidl_unbind"
            />
    </LinearLayout>

</RelativeLayout>
